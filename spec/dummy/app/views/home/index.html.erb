<h1>Create User</h1>
<%= form_tag users_path do |form| %>
  <div class='field'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class='field'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class='actions'>
    <%= submit_tag 'Create User' %>
  </div>
<% end %>


